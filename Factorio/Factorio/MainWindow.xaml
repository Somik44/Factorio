<Window x:Class="Factorio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Factorio"
        mc:Ignorable="d"
        Title="Factorio" 
        WindowStyle="None"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp">

    <Grid>
        <!-- Основной контейнер игры -->
        <Canvas x:Name="GameCanvas" Background="Black">
            <!-- Тайлы и игровые объекты будут добавляться сюда -->
        </Canvas>

        <!-- Панель управления поверх игры -->
        <Grid>
            <!-- Кнопка закрытия в правом верхнем углу -->
            <Button x:Name="CloseButton" 
                    Content="X" 
                    Width="30" 
                    Height="30" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Margin="0,10,10,0"
                    Background="Red" 
                    Foreground="White"
                    FontWeight="Bold"
                    Click="CloseButton_Click"/>
        </Grid>

        <!-- Панель инвентаря -->
        <Border HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Margin="0,0,0,20" 
                Background="#80000000" 
                CornerRadius="10"
                Padding="10">
            <StackPanel x:Name="InventoryPanel" Orientation="Horizontal">
                <!-- 5 слотов инвентаря -->
                <Border x:Name="InventorySlot1" 
                        Width="60" 
                        Height="60" 
                        BorderBrush="White" 
                        BorderThickness="2" 
                        Margin="5" 
                        CornerRadius="5"/>
                <Border x:Name="InventorySlot2" 
                        Width="60" 
                        Height="60" 
                        BorderBrush="White" 
                        BorderThickness="2" 
                        Margin="5"
                        CornerRadius="5"/>
                <Border x:Name="InventorySlot3" 
                        Width="60" 
                        Height="60" 
                        BorderBrush="White" 
                        BorderThickness="2" 
                        Margin="5"
                        CornerRadius="5"/>
                <Border x:Name="InventorySlot4" 
                        Width="60" 
                        Height="60" 
                        BorderBrush="White" 
                        BorderThickness="2" 
                        Margin="5"
                        CornerRadius="5"/>
                <Border x:Name="InventorySlot5" 
                        Width="60" 
                        Height="60" 
                        BorderBrush="White" 
                        BorderThickness="2" 
                        Margin="5"
                        CornerRadius="5"/>
            </StackPanel>
        </Border>

        <!-- Меню постройки (скрыто по умолчанию) -->
        <Border x:Name="BuildMenu" 
                Visibility="Collapsed"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Background="#E0000000" 
                CornerRadius="10"
                Padding="20"
                BorderBrush="Gray"
                BorderThickness="2">
            <StackPanel>
                <TextBlock Text="Меню постройки" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Кнопка постройки плавильни -->
                <Button x:Name="BuildSmelterButton"
                        Content="Плавильня (10 камня + 5 угля)"
                        Width="200"
                        Height="40"
                        Background="#FF333333"
                        Foreground="White"
                        BorderBrush="Gray"
                        Margin="0,5"
                        Click="BuildSmelterButton_Click">
                    <Button.ToolTip>
                        <ToolTip>
                            <StackPanel>
                                <TextBlock Text="Плавильня"/>
                                <TextBlock Text="Переплавляет железо и медь в слитки"/>
                                <TextBlock Text="Стоимость: 10 камня + 5 угля"/>
                            </StackPanel>
                        </ToolTip>
                    </Button.ToolTip>
                </Button>

                <!-- В меню постройки добавьте эту кнопку после кнопки плавильни -->
                <Button x:Name="BuildMinerButton"
                        Content="Добытчик (5 жел.слитков + 5 мед.слитков)"
                        Width="250"
                        Height="40"
                        Background="#FF333333"
                        Foreground="White"
                        BorderBrush="Gray"
                        Margin="0,5"
                        Click="BuildMinerButton_Click">
                    <Button.ToolTip>
                        <ToolTip>
                            <StackPanel>
                                <TextBlock Text="Добытчик"/>
                                <TextBlock Text="Добывает ресурсы каждую секунду"/>
                                <TextBlock Text="Должен быть установлен на ресурсе"/>
                                <TextBlock Text="Стоимость: 5 железных слитков + 5 медных слитков"/>
                            </StackPanel>
                        </ToolTip>
                    </Button.ToolTip>
                </Button>

                <Button x:Name="BuildArmsFactoryButton"
        Content="Оружейный завод (15 камня + 10 жел.слитков + 10 мед.слитков)"
        Width="250"
        Height="40"
        Background="#FF333333"
        Foreground="White"
        BorderBrush="Gray"
        Margin="0,5"
        Click="BuildArmsFactoryButton_Click">
                    <Button.ToolTip>
                        <ToolTip>
                            <StackPanel>
                                <TextBlock Text="Оружейный завод"/>
                                <TextBlock Text="Производит патроны из медных слитков и шестеренки из железных"/>
                                <TextBlock Text="Размер: 3x4 клетки"/>
                                <TextBlock Text="Стоимость: 15 камня + 10 железных слитков"/>
                            </StackPanel>
                        </ToolTip>
                    </Button.ToolTip>
                </Button>

                <!-- Кнопка постройки одного конвейера -->
                <Button x:Name="BuildConveyorButton"
                        Content="Конвейер (2 железных слитка)"
                        Width="200"
                        Height="40"
                        Background="#FF333333"
                        Foreground="White"
                        BorderBrush="Gray"
                        Margin="0,5"
                        Click="BuildConveyorButton_Click">
                    <Button.ToolTip>
                        <ToolTip>
                            <StackPanel>
                                <TextBlock Text="Конвейер"/>
                                <TextBlock Text="Передает ресурсы от добытчика к плавильне"/>
                                <TextBlock Text="Должен быть соединен с двумя зданиями"/>
                                <TextBlock Text="Стоимость: 2 железных слитка"/>
                            </StackPanel>
                        </ToolTip>
                    </Button.ToolTip>
                </Button>

              

                <!-- В меню постройки добавьте -->
                <Button x:Name="ToggleGridButton"
        Content="Сетка: Вкл"
        Width="150"
        Height="30"
        Background="#FF333333"
        Foreground="White"
        BorderBrush="Gray"
        Margin="0,5"
        Click="ToggleGridButton_Click">
                    <Button.ToolTip>
                        <ToolTip>
                            <StackPanel>
                                <TextBlock Text="Переключение сетки"/>
                                <TextBlock Text="Горячая клавиша: G"/>
                            </StackPanel>
                        </ToolTip>
                    </Button.ToolTip>
                </Button>

                <Button Content="Отмена"
                        Width="100"
                        Height="30"
                        Background="#FF555555"
                        Foreground="White"
                        Margin="0,10,0,0"
                        Click="CancelBuildButton_Click"/>
            </StackPanel>
        </Border>

        <!-- Подсказка при постройке -->
        <Border x:Name="BuildHint" 
                Visibility="Collapsed"
                HorizontalAlignment="Center" 
                VerticalAlignment="Top"
                Background="#A0000000" 
                CornerRadius="5"
                Padding="10"
                Margin="0,50,0,0">
            <TextBlock x:Name="BuildHintText" 
                       Text="Кликните на место для постройки" 
                       Foreground="White" 
                       FontSize="14"/>
        </Border>
    </Grid>
</Window>