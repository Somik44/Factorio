<Window x:Class="Factorio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Factorio"
        mc:Ignorable="d"
        Title="Factorio" 
        WindowStyle="None"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp">

    <Grid>
        <!-- Основной контейнер игры -->
        <Canvas x:Name="GameCanvas" Background="Black">
            <!-- Тайлы и игровые объекты будут добавляться сюда -->
        </Canvas>

        <!-- Панель управления поверх игры -->
        <Grid>
            <!-- Кнопка закрытия в правом верхнем углу -->
            <Button x:Name="CloseButton" 
                    Content="X" 
                    Width="30" 
                    Height="30" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Margin="0,10,10,0"
                    Background="Red" 
                    Foreground="White"
                    FontWeight="Bold"
                    Click="CloseButton_Click"/>
        </Grid>

        <!-- Панель инвентаря -->
        <Border HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Margin="0,0,0,20" 
                Background="#80000000" 
                CornerRadius="10"
                Padding="10">
            <StackPanel x:Name="InventoryPanel" Orientation="Horizontal">
                <!-- 5 слотов инвентаря -->
                <Border x:Name="InventorySlot1" 
                        Width="60" 
                        Height="60" 
                        BorderBrush="White" 
                        BorderThickness="2" 
                        Margin="5" 
                        CornerRadius="5"/>
                <Border x:Name="InventorySlot2" 
                        Width="60" 
                        Height="60" 
                        BorderBrush="White" 
                        BorderThickness="2" 
                        Margin="5"
                        CornerRadius="5"/>
                <Border x:Name="InventorySlot3" 
                        Width="60" 
                        Height="60" 
                        BorderBrush="White" 
                        BorderThickness="2" 
                        Margin="5"
                        CornerRadius="5"/>
                <Border x:Name="InventorySlot4" 
                        Width="60" 
                        Height="60" 
                        BorderBrush="White" 
                        BorderThickness="2" 
                        Margin="5"
                        CornerRadius="5"/>
                <Border x:Name="InventorySlot5" 
                        Width="60" 
                        Height="60" 
                        BorderBrush="White" 
                        BorderThickness="2" 
                        Margin="5"
                        CornerRadius="5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>